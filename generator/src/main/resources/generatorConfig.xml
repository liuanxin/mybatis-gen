<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<!-- 这个文件主要用于基于 数据库 自动生成 model、repository、xml 文件的相关配置 -->
<generatorConfiguration>
    <properties resource="generator.properties"/>

    <classPathEntry location="${driver}"/>

    <!--
    关于 targetRuntime >>
        更新的时候使用 MyBatis3 避免覆盖 cust.xml
        新表使用 IntrospectedTableMyBatis, 会多生成一个自定义的 xml.
    -->
    <context id="MySqlTables" targetRuntime="com.github.mte.mybatis.code.IntrospectedTableMyBatis">
        <!--定义 mysql 的转义符, 结合 table 标签的 delimitIdentifiers, delimitAllColumns 使用-->
        <property name="beginningDelimiter" value="`"/>
        <property name="endingDelimiter" value="`"/>

        <!-- 是否使用 java 的序列化? json 的效率会更好一些, 而且与平台无关 -->
        <plugin type="com.github.mte.mybatis.plugin.CustomSerializablePlugin"/>
        <plugin type="com.github.mte.mybatis.plugin.SetGetPlugin"/>
        <plugin type="com.github.mte.mybatis.plugin.CustomModelCommentPlugin"/>
        <!--<plugin type="com.github.mte.mybatis.plugin.CustomCachePlugin">
            <property name="cache_type" value="org.mybatis.caches.redis.RedisCache"/>
        </plugin>-->

        <!-- 抑制 mybatis 生成的注释 -->
        <commentGenerator>
            <property name="suppressAllComments" value="true"/>
        </commentGenerator>

        <jdbcConnection driverClass="${class}" connectionURL="${conn}" userId="${user}" password="${password}"/>

        <!--
        <javaTypeResolver>
            <property name="forceBigDecimals" value="true"/>
        </javaTypeResolver>
        -->

        <!-- 生成的实体类 -->
        <javaModelGenerator targetPackage="${parentPackage}.model" targetProject="${targetPath}/java">
            <property name="enableSubPackages" value="true"/>
        </javaModelGenerator>

        <!-- 生成的 xml 配置 -->
        <sqlMapGenerator targetPackage="${xmlDir}" targetProject="${targetPath}/resources"/>

        <!-- 生成 repository 接口和 xml 实现. 用 ognl 函数判断对象是否为空. @Ognl@isNotEmpty -->
        <javaClientGenerator type="com.github.mte.mybatis.code.CustomJavaMapperGenerator"
                targetPackage="${parentPackage}.repository" targetProject="${targetPath}/java">
            <property name="enableSubPackages" value="true"/>
        </javaClientGenerator>
        <!-- 用这个是产生 属性 != null 的
        <javaClientGenerator type="XMLMAPPER" targetPackage="${xxx}" targetProject="${targetPath}/java">
            <property name="enableSubPackages" value="true" />
        </javaClientGenerator>
        -->


        <table tableName="t_user" domainObjectName="User" escapeWildcards="true"
               enableCountByExample="true" enableUpdateByExample="true" enableDeleteByExample="true"
               enableSelectByExample="true" delimitIdentifiers="true" delimitAllColumns="true"/>

    </context>
</generatorConfiguration>
